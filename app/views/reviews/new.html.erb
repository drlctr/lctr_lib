<%= form_for([@book, @book.reviews.new]) do |f| %>

  <div class='field'>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class='field'>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class='actions'>
    <%= f.submit 'Add' %>
  </div>
<% end %>