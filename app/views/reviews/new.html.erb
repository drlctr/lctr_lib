<%= form_for([@book, @book.reviews.new]) do |f| %>

  <div class='field'>
    <%= f.label :username %><br />
    <%= f.text_field(:username, value: current_user.username, readonly: true) %>
  </div>
  <div class='field'>
    <%= f.label :email %><br />
    <%= f.text_field(:email, value: current_user.email, 
      readonly: true) %>
  </div>
  <div class='field'>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div>
  <div class='field'>
  <%= f.hidden_field(:user_id, value: current_user.id) %>
  </div>

  <div class='actions'>
    <%= f.submit 'Add' %>
  </div>
<% end %>