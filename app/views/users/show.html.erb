<body>
  
  <div class="large-9 columns" role="content">

    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Receiving Review Notifications?</strong>
      <%= @user.user_profile.mail_pref_rev %>
    </p>

    <p>
      <strong>Receiving Rating Notifications?</strong>
      <%= @user.user_profile.mail_pref_rat %>
    </p>

    <p>
    <% if current_user.is_admin? %>
      <% if @user.is_admin? %>
        <strong>User has admin priviledges</strong>
        <%= link_to "Revoke admin priviledges", "/users/revoke_admin_priv/#{@user.id}" %>
      <% else %>
        <strong>User has user priviledges</strong>
        <%= link_to "Give admin priviledges", "/users/give_admin_priv/#{@user.id}" %>
      <% end %>
      <br>
      <% if @user.is_blocked? %>
        <strong>User is blocked and cannot comment or review</strong>
        <%= link_to "Unblock user", "/users/unblock_user/#{@user.id}" %>
      <% else %>
        <strong>User is not blocked, and can comment and review</strong>
        <%= link_to "Block user", "/users/block_user/#{@user.id}" %>
      <% end %>
    <% end %>      
    </p>

    <%= link_to 'Edit', edit_user_registration_path(@user) %> 
    <%= link_to 'Back', users_path %>

  </div>

  <aside class="large-3 columns">

    <div class="panel">
      <%= render '/layouts/sidebar2' %>
    </div>

  </aside>


</body>

