  <body>
    
    <div class="large-9 columns" role="content">

      <h3>Listing Books</h3>
      <h5>Click "Show" or book title to review/rate</h5>
     
      <table>
       
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Rating</th>
            <th colspan="4">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @approved_books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book %></td>
              <td><%= book.author %></td>
              <td><%= book.ISBN %></td>
              <td><%= rating_for book, "user_rating" %></td>
              <td><%= link_to 'Show', book %></td>
              <% if can? :update, book %>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <% end %>
              <% if can? :destroy, book %>
                <td><%= link_to 'Destroy', book, method: :delete, 
                  data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>

        <tbody>
          <tr><td><h5>Deactivated books</h5></td></tr>        
          <% @deactivated_books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book %></td>
              <td><%= book.author %></td>
              <td><%= book.ISBN %></td>
              <td><%= rating_for book, "user_rating" %></td>
              <td><%= link_to 'Show', book %></td>
              <% if can? :update, book %>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <% end %>
            </tr>
          <% end %>          
        </tbody>
      <% if current_user.is_admin? %>
        <tbody>
          <tr><td><h5>Submitted books</h5></td></tr>        
          <% @submitted_books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book %></td>
              <td><%= book.author %></td>
              <td><%= book.ISBN %></td>
              <td><%= rating_for book, "user_rating" %></td>
              <td><%= link_to 'Show', book %></td>
              <td><%= link_to 'Edit', edit_book_path(book) %></td>
              <td><%= link_to 'Destroy', book, method: :delete, 
                  data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Approve', approve_path(book) %>
            </tr>
          <% end %>          
        </tbody>
       <% end %>
      </table>

      <br>

      <%= link_to 'New Book', new_book_path %>
   
    </div>
    
    <%= render '/layouts/sidebar' %>

  </body>
</html>
