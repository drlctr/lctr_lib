<body>
  
  <div class="large-9 columns" role="content">

    <p>
      <strong>Title:</strong>
      <%= @book.title %>
    </p>

    <p>
      <strong>Author:</strong>
      <%= @book.author %>
    </p>

    <p>
      <strong>ISBN:</strong>
      <%= @book.ISBN %>
    </p>

    <strong>Rate this book!</strong>
    <%= rating_for @book, "user_rating" %>


    <%= link_to 'Edit', edit_book_path(@book) %> |
    <%= link_to 'Back', books_path %>

  </div>

  <%= render '/layouts/sidebar' %>
 
</body>
